{
  "version": "1.0.0",
  "project": "Deploy-System-Unified",
  "standards": {
    "yaml": {
      "enabled": true,
      "config_file": ".yamllint.yml",
      "auto_fix": true,
      "rules": [
        "trailing_spaces",
        "indentation",
        "line_length",
        "new_line_at_end_of_file"
      ]
    },
    "ansible": {
      "enabled": true,
      "config_file": ".ansible-lint.yml",
      "auto_fix": false,
      "rules": [
        "no_roles_in_main",
        "deprecated_become_syntax",
        "command-instead-of-module"
      ]
    },
    "naming": {
      "enabled": true,
      "auto_fix": true,
      "rules": [
        "no_spaces_in_filenames",
        "lowercase_filenames",
        "snake_case_variables"
      ]
    },
    "security": {
      "enabled": true,
      "auto_fix": false,
      "rules": [
        "no_hardcoded_secrets",
        "safe_file_permissions",
        "secure_ssh_config"
      ]
    },
    "structure": {
      "enabled": true,
      "auto_fix": false,
      "rules": [
        "proper_role_structure",
        "required_main_files",
        "consistent_directory_names"
      ]
    }
  },
  "exclusions": {
    "directories": [
      ".git",
      "node_modules",
      ".venv",
      "__pycache__"
    ],
    "files": [
      "*.log",
      "*.tmp",
      "*.swp"
    ]
  },
  "reporting": {
    "format": "markdown",
    "include_details": true,
    "auto_generate": true
  }
}
