# Cosign Environment Configuration
# Managed by Ansible - DO NOT EDIT MANUALLY

# Cosign version
COSIGN_VERSION={{ cosign_version }}

# Signing mode
COSIGN_KEY_MODE={{ cosign_key_mode }}

# Keyless settings
{% if cosign_keyless_mode %}
COSIGN_KEYLESS=true
COSIGN_FULCIO_URL={{ cosign_fulcio_url }}
COSIGN_REKOR_URL={{ cosign_rekor_url }}
{% endif %}

# Key paths
COSIGN_KEY_PATH=/etc/cosign/keys/cosign.key
COSIGN_PUBLIC_KEY_PATH=/etc/cosign/keys/cosign.pub

# Policy paths
COSIGN_POLICY_PATH=/etc/cosign/policies

# Root certificate
COSIGN_ROOT_CERT=/etc/cosign/cosign.crt

# Log level
COSIGN_LOG_LEVEL={{ cosign_log_level | default('info') }}

# Additional options
COSIGN_EXPERIMENTAL={{ cosign_experimental | default(false) }}
COSIGN_TIMESTAMP={{ cosign_timestamp | default(true) }}
