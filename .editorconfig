# =============================================================================
# EditorConfig - https://editorconfig.org
# Helps maintain consistent coding styles across editors and IDEs
# =============================================================================

root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# Unix shell scripts
[*.sh]
indent_style = space
indent_size = 2

# Makefiles require tabs
[Makefile]
indent_style = tab

# YAML files (Ansible, CI/CD)
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# Python files
[*.py]
indent_style = space
indent_size = 4

# Jinja2 templates
[*.j2]
indent_style = space
indent_size = 2

# Markdown files - preserve trailing spaces for line breaks
[*.md]
trim_trailing_whitespace = false

# JSON files
[*.json]
indent_style = space
indent_size = 2

# Terraform/HCL files
[*.{tf,tfvars}]
indent_style = space
indent_size = 2

# XML files
[*.xml]
indent_style = space
indent_size = 2

# INI files
[*.ini]
indent_style = space
indent_size = 2

# Ansible vault files - no trailing whitespace trimming (encrypted)
[.vault_pass]
trim_trailing_whitespace = false
insert_final_newline = false

# License files
[*.license]
trim_trailing_whitespace = false

# Dot files configuration
[.{gitignore,gitattributes,gitmodules,editorconfig}]
indent_style = space
indent_size = 2

# Test files
[**/tests/**/*.{py,yml,yaml}]
indent_style = space
indent_size = 4

# Molecule test scenarios
[**/molecule/**/*.{yml,yaml}]
indent_style = space
indent_size = 2
