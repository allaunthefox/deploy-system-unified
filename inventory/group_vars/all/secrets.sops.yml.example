---
# SOPS-ENCRYPTED SECRETS TEMPLATE
# ============================================================
# This is the template file for SOPS-encrypted secrets.
# DO NOT commit real secrets in plaintext.
#
# USAGE:
#   1. Copy this file: cp secrets.sops.yml.example secrets.sops.yml
#   2. Replace all CHANGE_ME_IN_SOPS placeholders with actual values
#   3. Encrypt: sops -e -i secrets.sops.yml
#
# IMPORTANT: Never commit the encrypted file with real secrets to version control.
# The .gitignore should exclude secrets.sops.yml but include the .example template.
#
# For key rotation instructions, see: docs/deployment/SOPS_KEY_ROTATION_SOP.md

# ============================================================
# ACCESS CONTROL
# ============================================================
# Admin password hash (generate with: openssl passwd -6 'YourStrongPassword')
# Or use: python3 -c "import crypt; print(crypt.crypt('YourPassword', crypt.mksalt(crypt.METHOD_SHA256)))"
access_admin_password_hash: "CHANGE_ME_IN_SOPS"
access_admin_password_enforce: true

# ============================================================
# DATABASE CREDENTIALS
# ============================================================
# Global database password (fallback/superuser)
database_password: "CHANGE_ME_IN_SOPS"

# ============================================================
# AUTHENTIK (Identity Provider)
# ============================================================
# Application secret key (generate with: python3 -c "import secrets; print(secrets.token_hex(32))")
authentik_secret_key: "CHANGE_ME_IN_SOPS"
# PostgreSQL password for Authentik
authentik_pg_password: "CHANGE_ME_IN_SOPS"

# ============================================================
# WIKI.JS
# ============================================================
# PostgreSQL password for Wiki.js
wikijs_pg_password: "CHANGE_ME_IN_SOPS"

# ============================================================
# VAULTWARDEN (Password Manager)
# ============================================================
# Admin token (generate with: python3 -c "import secrets; print(secrets.token_urlsafe(32))")
vaultwarden_admin_token: "CHANGE_ME_IN_SOPS"

# ============================================================
# MEDIA STACK (Transmission/Jellyfin/Arr)
# ============================================================
# Transmission RPC user
transmission_user: "CHANGE_ME_IN_SOPS"
# Transmission RPC password
transmission_pass: "CHANGE_ME_IN_SOPS"

# ============================================================
# MONITORING STACK
# ============================================================
# Grafana admin password
monitoring_grafana_admin_password: "CHANGE_ME_IN_SOPS"

# ============================================================
# BACKUP & RESTIC
# ============================================================
# Restic repository password
restic_password: "CHANGE_ME_IN_SOPS"

# ============================================================
# EXTERNAL API TOKENS
# ============================================================
# Generic API token
api_token: "CHANGE_ME_IN_SOPS"

# Porkbun DNS API (for dynamic DNS)
vault_porkbun_api_key: "CHANGE_ME_IN_SOPS"
vault_porkbun_secret_api_key: "CHANGE_ME_IN_SOPS"

# CrowdSec Firewall Bouncer
vault_crowdsec_firewall_bouncer_key: "CHANGE_ME_IN_SOPS"

# ============================================================
# TROUBLESHOOTING
# ============================================================
# If you need to regenerate values:
# - Passwords: python3 -c "import secrets; print(secrets.token_hex(32))"
# - Tokens: python3 -c "import secrets; print(secrets.token_urlsafe(32))"
# - Hashes: openssl passwd -6 'YourPassword'
